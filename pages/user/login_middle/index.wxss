    position: relative;
    background: #eeeeee;
}

.border{
    position: absolute;
    top: 0;
    bottom:0;
    left: 0;
    right: 0;
    margin: auto;
    height: 90%;
    margin-left: 30rpx;
    margin-right: 30rpx;
    background: #ffffff;
}

.title_ico{
    width: 50px;
    height: 50px;
    margin: 0 auto;
