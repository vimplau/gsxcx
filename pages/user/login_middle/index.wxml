<!--pages/user/login_middle/index.wxml-->
<view class="bg">
    <view class="border">
        <view class="title_ico">
            <!-- <image src="/source/image/frame/uniqlo.png" style="width:50px;height:50px;"></image> -->
        </view>
        <view >
            <button class="wx_login" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" style="border-radius: 0px;">
                <view class="wx_login_align">
                    <image src="/source/image/frame/wx.png" style="width:40px;height:40px;margin-top:3px;float:left"></image>
                    <text style="float:left;line-height:46px;font-size:16px">微信登录</text>
                </view>
            </button>
        </view>
        <view >
            <view class="phone_login" bindtap="phoneLogin">
                <view class="phone_login_align">
                    <text style="float:left;line-height:46px;font-size:16px;">手机号登录</text>
                </view>
            </view>
        </view>
    </view>
</view>