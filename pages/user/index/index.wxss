/* pages/user/index/index.wxss */
.bg{
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    position: relative;
    background: #eeeeee;
}

.user{
    background-color: #ffffff;
    width: 100%;
    height: 200rpx;
}

.user_image{
    width: 128rpx;
    height: 128rpx;
    margin-left: 30rpx;
    margin-top: 31rpx;
    float: left;
}

.user_phone{
    width: 128rpx;
    height: 128rpx;
    margin-left: 30rpx;
    margin-top: 100rpx;
    float: left;
}


.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}
  
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.about_us{
    width: 100%;
    height: 80rpx;
    background-color: #ffffff;
    margin-top: 50rpx;
}

.about_us_ico{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    float: left;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.about_us_text{
    font-size: 28rpx;
    line-height:80rpx;
    float: left;
    margin-left: 20rpx;
}

