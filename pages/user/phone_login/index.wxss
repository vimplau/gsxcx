/* pages/user/phone_login/index.wxss */

.bg{
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    position: relative;
    background: #eeeeee;
}

.border{
    position: absolute;
    top: 0;
    bottom:0;
    left: 0;
    right: 0;
    margin: auto;
    height: 90%;
    margin-left: 30rpx;
    margin-right: 30rpx;
    background: #ffffff;
}

.title_ico{
    width: 40px;
    height: 40px;
    margin: 0 auto;
    margin-top: 30%;
}

.wx_login{
    height: 40px;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border: 1px solid #3cb035;
    margin-top: 50px;
}

.wx_login_align{
    height: 40px;
    width: 88px;
    text-align:center;
    margin: 0 auto;
    line-height: 30px;
}

.phone_login{
    height: 40px;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 10px;
    border: 1px solid #000000;
}

.submit{
    height: 40px;
    width: 32px;
    text-align:center;
    margin: 0 auto;
    line-height: 30px;
    border: 1px solid #000000;

}

.getCode{
    width:100px;
    height:40px;
    font-size: 12px;
    float:right;
    text-align: center;
    line-height: 40px;
}